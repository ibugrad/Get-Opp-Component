import { LightningElement,track } from 'lwc';
import getOpp from '@salesforce/apex/GetOppLwc.getOppRecords1';
import Id from '@salesforce/user/Id';
export default class GetOpportunityImp extends LightningElement {
    @track columns = [{
        label: 'Opportunity name',fieldName: 'Name', type: 'text',  },
    {
        label: 'Amount',fieldName: 'Amount', type: 'currency', },
    {
        label: 'Closed Date', fieldName: 'CloseDate', type: 'date', },
    {
        label: 'Stagename',fieldName: 'StageName', type: 'text', },
   
];
userId=Id;

    @track error;
    @track opps;
    GetOppRecords(){

        getOpp({ownId:this.userId}).then( result =>{this.opps = result} ) 
        .catch(error => {this.error = error})
    }

}
